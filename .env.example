# Скопируйте в .env и заполните значения.
# Не коммитьте .env в репозиторий.

# LLM API (OpenAI-совместимый). Ключ: LLM_API_KEY или OPENAI_API_KEY
LLM_API_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=
# OPENAI_API_KEY=   # альтернатива LLM_API_KEY
LLM_MODEL=gpt-4o-mini

# Опционально: RAG (по умолчанию берутся из docker-compose / кода)
# QDRANT_URL=http://qdrant:6333
# COLLECTION_NAME=papers
# LIMIT_FIRST=20
# LIMIT_FINAL=5
# RERANK_ALPHA=0.6

# Chatwoot (для webhook: bot + copilot). Без них /chatwoot/webhook не постит в Chatwoot.
# В Chatwoot: Settings → Integrations → Webhooks → URL = https://<ВАШ_БЭКЕНД>/chatwoot/webhook
# Если RAG-бэкенд развёрнут на другом сервере — укажите в Chatwoot URL этого сервера.
# CHATWOOT_BASE_URL=https://chatwoot.yourcompany.com
# CHATWOOT_ACCOUNT_ID=1
# CHATWOOT_API_ACCESS_TOKEN=
# CHATWOOT_SUPPORT_MODE_ATTR=support_mode
# Стримить ответ бота блоками (true) — постим по абзацам/предложениям; false — одно сообщение + placeholder.
# CHATWOOT_STREAM_REPLY=false
# CHATWOOT_STREAM_MIN_CHARS=120
# CHATWOOT_STREAM_MAX_CHARS=450

# Algolia agent (algolia-agent index): загрузка .md из docs_crawl в Algolia
# ALGOLIA_APPLICATION_ID=
# ALGOLIA_API_KEY=
# ALGOLIA_DOCS_DIR=docs_crawl
# ALGOLIA_INDEX_NAME=kinescope_docs
